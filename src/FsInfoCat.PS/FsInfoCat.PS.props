<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <ProjectGuid>{D6A47138-19EF-4860-9C80-64C78EAFDEEE}</ProjectGuid>
        <AssemblyTitle>FS InfoCat PowerShell Library</AssemblyTitle>
        <Description>Supporting CLR Library for PowerShell Module FsInfoCat</Description>
        <Product>PowerShell Module FsInfoCat.PS</Product>
    </PropertyGroup>

    <Choose>
        <When Condition=" '$(IsNetFramework)' == 'true' ">
            <PropertyGroup>
                <FsInfoCatDeploy>..\..\$(Configuration)\$(OsPlatform)\NetFramework\FsInfoCat\</FsInfoCatDeploy>
            </PropertyGroup>
        </When>
        <When Condition=" $(OsPlatform)' == 'Windows' ">
            <PropertyGroup>
                <FsInfoCatDeploy>..\..\$(Configuration)\$(OsPlatform)\NetCore\FsInfoCat\</FsInfoCatDeploy>
            </PropertyGroup>
        </When>
        <When Condition=" '$(IsNetFramework)' == 'true' Or '$(OsPlatform)' == 'Windows' ">
        </When>
        <Otherwise>
            <PropertyGroup>
                <FsInfoCatDeploy>..\..\$(Configuration)\$(OsPlatform)\FsInfoCat\</FsInfoCatDeploy>
            </PropertyGroup>
        </Otherwise>
    </Choose>

</Project>
