<Project Sdk="Microsoft.NET.Sdk">

    <Import Project="..\FsInfoCat.props" />

    <PropertyGroup>
        <ProjectGuid>{D6A47138-19EF-4860-9C80-64C78EAFDEEE}</ProjectGuid>
        <TargetFramework>netstandard2.0</TargetFramework>
        <OutputPath>bin\$(Configuration)\$(OsPlatform)\</OutputPath>
        <RootNamespace>FsInfoCat.PS</RootNamespace>
        <AssemblyName>FsInfoCat.PS</AssemblyName>
        <Company>Leonard T. Erwine</Company>
        <AssemblyTitle>FS InfoCat PowerShell Library</AssemblyTitle>
        <Description>Supporting CLR Library for PowerShell Module FsInfoCat</Description>
        <Product>PowerShell Module FsInfoCat.PS</Product>
        <Copyright>Copyright Â© Leonard Thomas Erwine 2021</Copyright>
        <AssemblyVersion>0.1.0.0</AssemblyVersion>
        <FileVersion>0.1.0.0</FileVersion>
        <FsInfoCatDeploy>..\..\$(Configuration)\$(OsPlatform)\FsInfoCat\</FsInfoCatDeploy>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="PowerShellStandard.Library" Version="5.1.0-preview-06">
            <PrivateAssets>All</PrivateAssets>
        </PackageReference>
        <PackageReference Include="System.ComponentModel.Annotations" Version="5.0.0" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\FsInfoCat\FsInfoCat.csproj" />
    </ItemGroup>

    <ItemGroup>
        <Content Include="about_FsInfoCat.help.txt">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
        <Content Include="about_FsInfoCat.PS.help.txt">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
        <Content Include="FsInfoCat.psd1">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
        <Content Include="FsInfoCat.psm1">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
        <Content Include="Example.ps1">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
        <None Include="FsInfoCat.tt">
            <CopyToOutputDirectory>Never</CopyToOutputDirectory>
        </None>
    </ItemGroup>

    <Target Name="PreBuild" AfterTargets="PreBuildEvent">
        <Exec Command="$(ProjectDir)..\..\dev\StandaloneT4Host\bin\Debug\net472\StandaloneT4Host.exe &quot;$(ProjectPath)&quot;" />
    </Target>

    <Target Name="PostBuild" AfterTargets="PostBuildEvent">
        <Exec Condition=" !Exists('..\..\$(Configuration)') " Command="mkdir &quot;..\..\$(Configuration)&quot;" />
        <Exec Condition=" !Exists('..\..\$(Configuration)\$(OsPlatform)') " Command="mkdir &quot;..\..\$(Configuration)\$(OsPlatform)&quot;" />
        <Exec Condition=" !Exists('..\..\$(Configuration)\$(OsPlatform)\FsInfoCat') " Command="mkdir &quot;..\..\$(Configuration)\$(OsPlatform)\FsInfoCat&quot;" />
        <Exec Command="copy &quot;$(TargetDir)$(TargetFileName)&quot; &quot;$(FsInfoCatDeploy)$(TargetFileName)&quot; /Y" />
        <Exec Command="copy &quot;$(TargetDir)$(MSBuildProjectName).pdb&quot; &quot;$(FsInfoCatDeploy)$(MSBuildProjectName).pdb&quot; /Y" />
        <Exec Command="copy &quot;$(TargetDir)FsInfoCat.dll&quot; &quot;$(FsInfoCatDeploy)FsInfoCat.dll&quot; /Y" />
        <Exec Command="copy &quot;$(TargetDir)FsInfoCat.pdb&quot; &quot;$(FsInfoCatDeploy)FsInfoCat.pdb&quot; /Y" />
        <Exec Command="copy &quot;$(TargetDir)*.psd1&quot; &quot;$(FsInfoCatDeploy)&quot; /Y" />
        <Exec Command="copy &quot;$(TargetDir)*.psm1&quot; &quot;$(FsInfoCatDeploy)&quot; /Y" />
        <Exec Command="copy &quot;$(TargetDir)*.ps1&quot; &quot;$(FsInfoCatDeploy)&quot; /Y" />
        <Exec Command="copy &quot;$(TargetDir)*.help.txt&quot; &quot;$(FsInfoCatDeploy)&quot; /Y" />
    </Target>
</Project>
