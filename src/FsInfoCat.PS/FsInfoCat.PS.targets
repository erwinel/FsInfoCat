<Project>

    <ItemGroup>
        <PackageReference Include="PowerShellStandard.Library" Version="5.1.0-preview-06">
            <PrivateAssets>All</PrivateAssets>
        </PackageReference>
        <PackageReference Include="System.ComponentModel.Annotations" Version="5.0.0" />
    </ItemGroup>

    <ItemGroup>
        <PsFile Include="*.help.txt;*.psd1;*.psm1;*.ps1" Exclude="Test/**/*.*">
            <CopyToOutputDirectory>Never</CopyToOutputDirectory>
        </PsFile>
        <None Include="*.tt;Test/**/*.*">
            <CopyToOutputDirectory>Never</CopyToOutputDirectory>
        </None>
        <CompiledBinaries Include="$(TargetDir)*.dll;$(TargetDir)*.pdb">
            <CopyToOutputDirectory>Never</CopyToOutputDirectory>
        </CompiledBinaries>
    </ItemGroup>

    <Target Name="PreBuild" AfterTargets="PreBuildEvent">
        <Exec Command="$(ProjectDir)..\..\dev\StandaloneT4Host\bin\Debug\net472\StandaloneT4Host.exe &quot;$(ProjectPath)&quot;" />
    </Target>

    <Target Name="PostBuild" AfterTargets="PostBuildEvent">
        <MakeDir Directories="$(FsInfoCatDeploy)" />
        <Copy SourceFiles="@(PsFile)" DestinationFiles="@(PsFile->'$(FsInfoCatDeploy)%(RecursiveDir)%(Filename)%(Extension)')" />
        <Copy SourceFiles="@(CompiledBinaries)" DestinationFiles="@(CompiledBinaries->'$(FsInfoCatDeploy)%(RecursiveDir)%(Filename)%(Extension)')" />
    </Target>

</Project>
