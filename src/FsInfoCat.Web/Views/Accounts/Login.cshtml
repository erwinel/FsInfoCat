@model FsInfoCat.Models.Accounts.UserLoginRequest

<h2>Login</h2>

<div class="row">
    <div class="col-md-8">
        <section>
        <form asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" class="form-horizontal" role="form">
            <div asp-validation-summary="ModelOnly" class="text-warning"></div>
            <div class="form-group">
                <label asp-for="LoginName" class="control-label"></label>
                <input asp-for="LoginName" class="form-control" />
                <span asp-validation-for="LoginName" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-warning"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
@if((bool)ViewData["ShowError"])
{
                <div class="alert alert-danger" role="alert">@ViewData["ErrorMessage"]</div>
}
            </div>
        </form>
        </section>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
