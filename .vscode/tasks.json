{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build All",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "Build All (Core)",
                "Build All (Desktop)"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Publish All",
            "dependsOn": [
                "Publish All (Core)",
                "Publish All (Desktop)"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Run Core Tests",
            "command": "dotnet",
            "type": "process",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "windows": {
                "args": [
                    "test",
                    "--configuration:Debug",
                    "${workspaceFolder}/src/FsInfoCat.Test/FsInfoCat.TestWindows.csproj"
                ]
            },
            "linux": {
                "args": [
                    "test",
                    "--configuration:Debug",
                    "${workspaceFolder}/src/FsInfoCat.Test/FsInfoCat.TestLinux.csproj"
                ]
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Build All (Core)",
            "command": "dotnet",
            "type": "process",
            "windows": {
                "args": [
                    "build",
                    "--configuration:Debug",
                    "${workspaceFolder}/src/FsInfoCat.Windows.sln",
                    "/property:GenerateFullPaths=true",
                    "/consoleloggerparameters:NoSummary"
                ]
            },
            "linux": {
                "args": [
                    "build",
                    "--configuration:Debug",
                    "${workspaceFolder}/src/FsInfoCat.Linux.sln",
                    "/property:GenerateFullPaths=true",
                    "/consoleloggerparameters:NoSummary"
                ]
            },
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Publish All (Core)",
            "command": "dotnet",
            "type": "process",
            "windows": {
                "args": [
                    "publish",
                    "--configuration:Release",
                    "${workspaceFolder}/src/FsInfoCat.Windows.sln",
                    "/property:GenerateFullPaths=true",
                    "/consoleloggerparameters:NoSummary"
                ]
            },
            "linux": {
                "args": [
                    "publish",
                    "--configuration:Release",
                    "${workspaceFolder}/src/FsInfoCat.Linux.sln",
                    "/property:GenerateFullPaths=true",
                    "/consoleloggerparameters:NoSummary"
                ]
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build All (Desktop)",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "--configuration:Debug",
                "${workspaceFolder}/src/FsInfoCat.Desktop.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Publish All (Desktop)",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "--configuration:Release",
                "${workspaceFolder}/src/FsInfoCat.Desktop.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build Core Library",
            "command": "dotnet",
            "type": "process",
            "windows": {
                "args": [
                    "build",
                    "--configuration:Debug",
                    "${workspaceFolder}/src/FsInfoCat/FsInfoCat.Windows.csproj",
                    "/property:GenerateFullPaths=true",
                    "/consoleloggerparameters:NoSummary"
                ]
            },
            "linux": {
                "args": [
                    "build",
                    "--configuration:Debug",
                    "${workspaceFolder}/src/FsInfoCat/FsInfoCat.Linux.csproj",
                    "/property:GenerateFullPaths=true",
                    "/consoleloggerparameters:NoSummary"
                ]
            },
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build Desktop Library",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "--configuration:Debug",
                "${workspaceFolder}/src/FsInfoCat/FsInfoCat.Desktop.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build Web App",
            "command": "dotnet",
            "type": "process",
            "dependsOn": [
                "Transpile TypeScript"
            ],
            "args": [
                "build",
                "--configuration:Debug",
                "${workspaceFolder}/src/FsInfoCat.Web/FsInfoCat.Web.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Publish Web App",
            "command": "dotnet",
            "type": "process",
            "dependsOn": [
                "Transpile TypeScript"
            ],
            "args": [
                "publish",
                "--configuration:Release",
                "${workspaceFolder}/src/FsInfoCat.Web/FsInfoCat.Web.csproj",
                "/property:GenerateFullPaths=true",
                "/configuration:Release",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build Desktop App",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "--configuration:Debug",
                "${workspaceFolder}/src/FsInfoCat.Desktop/FsInfoCat.Desktop.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build PS Core",
            "command": "dotnet",
            "type": "process",
            "windows": {
                "args": [
                    "build",
                    "--configuration:Debug",
                    "${workspaceFolder}/src/FsInfoCat.PS/FsInfoCat.PsWindows.csproj",
                    "/property:GenerateFullPaths=true",
                    "/consoleloggerparameters:NoSummary"
                ]
            },
            "linux": {
                "args": [
                    "build",
                    "--configuration:Debug",
                    "${workspaceFolder}/src/FsInfoCat.PS/FsInfoCat.PsLinux.csproj",
                    "/property:GenerateFullPaths=true",
                    "/consoleloggerparameters:NoSummary"
                ]
            },
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Publish PS Core",
            "command": "dotnet",
            "type": "process",
            "windows": {
                "args": [
                    "publish",
                    "--configuration:Release",
                    "${workspaceFolder}/src/FsInfoCat.PS/FsInfoCat.PsWindows.csproj",
                    "/property:GenerateFullPaths=true",
                    "/consoleloggerparameters:NoSummary"
                ]
            },
            "linux": {
                "args": [
                    "publish",
                    "--configuration:Release",
                    "${workspaceFolder}/src/FsInfoCat.PS/FsInfoCat.PsLinux.csproj",
                    "/property:GenerateFullPaths=true",
                    "/consoleloggerparameters:NoSummary"
                ]
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build PS Desktop",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "--configuration:Debug",
                "${workspaceFolder}/src/FsInfoCat.PS/FsInfoCat.PsDesktop.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Publish PS Desktop",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "--configuration:Release",
                "${workspaceFolder}/src/FsInfoCat.PS/FsInfoCat.PsDesktop.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build Core Test",
            "command": "dotnet",
            "type": "process",
            "windows": {
                "args": [
                    "build",
                    "--configuration:Debug",
                    "${workspaceFolder}/src/FsInfoCat.Test/FsInfoCat.TestWindows.csproj",
                    "/property:GenerateFullPaths=true",
                    "/consoleloggerparameters:NoSummary"
                ]
            },
            "linux": {
                "args": [
                    "build",
                    "--configuration:Debug",
                    "${workspaceFolder}/src/FsInfoCat.Test/FsInfoCat.TestLinux.csproj",
                    "/property:GenerateFullPaths=true",
                    "/consoleloggerparameters:NoSummary"
                ]
            },
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Transpile TypeScript",
            "type": "typescript",
            "tsconfig": "src/FsInfoCat.Web/ClientApp/tsconfig.json",
            "problemMatcher": "$tsc"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/src/FsInfoCat.Web/FsInfoCat.Web.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}
