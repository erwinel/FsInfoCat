                "build",
                "--configuration:NetCoreDebug",
                "${workspaceFolder}/src/FsInfoCat.sln",
                "/property:GenerateFullPaths=true",
                "/property:IsNetFramework=false",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
