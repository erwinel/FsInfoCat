{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build All",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "--configuration:Debug",
                "${workspaceFolder}/src/FsInfoCat.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "/fl", "/flp:logfile=\"${workspaceFolder}/dev/log/All.Debug.log\";verbosity=normal" // verbosity=minimal|normal|detailed|diagnostic
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build Web App",
            "command": "dotnet",
            "type": "process",
            "dependsOn": [
                "Transpile TypeScript"
            ],
            "args": [
                "build",
                "--configuration:Debug",
                "${workspaceFolder}/src/FsInfoCat.Web/FsInfoCat.Web.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "/fl", "/flp:logfile=\"${workspaceFolder}/dev/log/FsInfoCat.Web.Debug.log\";verbosity=normal" // verbosity=minimal|normal|detailed|diagnostic
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build PS Module",
            "command": "dotnet",
            "type": "process","args": [
                "build",
                "--configuration:Debug",
                "${workspaceFolder}/src/FsInfoCat.PS/FsInfoCat.PS.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "/fl", "/flp:logfile=\"${workspaceFolder}/dev/log/FsInfoCat.PS.Win64Core.Debug.log\";verbosity=normal" // verbosity=minimal|normal|detailed|diagnostic
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build TestHelper Module",
            "command": "dotnet",
            "type": "process","args": [
                "build",
                "--configuration:Debug",
                "${workspaceFolder}/dev/src/TestHelper/TestHelper.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "/fl", "/flp:logfile=\"${workspaceFolder}/dev/log/TestHelper.log\";verbosity=normal" // verbosity=minimal|normal|detailed|diagnostic
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build DevHelper Module",
            "command": "dotnet",
            "type": "process","args": [
                "build",
                "--configuration:Debug",
                "${workspaceFolder}/dev/src/DevHelper/DevHelper.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "/fl", "/flp:logfile=\"${workspaceFolder}/dev/log/DevHelper.log\";verbosity=normal" // verbosity=minimal|normal|detailed|diagnostic
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build Test Project",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "--configuration:Debug",
                "${workspaceFolder}/src/FsInfoCat.Test/FsInfoCat.Test.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "/fl", "/flp:logfile=\"${workspaceFolder}/dev/log/FsInfoCat.Test.log\";verbosity=normal" // verbosity=minimal|normal|detailed|diagnostic
            ],
            "dependsOn":[
                "Build Text Template Host"
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build Common Library",
            "command": "dotnet",
            "type": "process","args": [
                "build",
                "--configuration:Debug",
                "${workspaceFolder}/src/FsInfoCat/FsInfoCat.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "/fl", "/flp:logfile=\"${workspaceFolder}/dev/log/FsInfoCat.Win64Core.Debug.log\";verbosity=normal" // verbosity=minimal|normal|detailed|diagnostic
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Run All Unit Tests",
            "command": "dotnet",
            "type": "process",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "args": [
                "test",
                "--configuration:Debug",
                "--results-directory:${workspaceFolder}/dev/log",
                "--logger:trx;LogFileName=AllTestResults.xml",
                "${workspaceFolder}/src/FsInfoCat.Test/FsInfoCat.Test.csproj"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Run P1 Unit Tests",
            "command": "dotnet",
            "type": "process",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "args": [
                "test",
                "--configuration:Debug",
                "--results-directory:${workspaceFolder}/dev/log",
                "--logger:trx;LogFileName=P1TestResults.xml",
                "--filter:Priority=1",
                "${workspaceFolder}/src/FsInfoCat.Test/FsInfoCat.Test.csproj"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Run P1 & P2 Unit Tests",
            "command": "dotnet",
            "type": "process",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "args": [
                "test",
                "--configuration:Debug",
                "--results-directory:${workspaceFolder}/dev/log",
                "--logger:trx;LogFileName=P2TestResults.xml",
                "--filter:Priority=1|2",
                "${workspaceFolder}/src/FsInfoCat.Test/FsInfoCat.Test.csproj"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Publish Web App",
            "command": "dotnet",
            "type": "process",
            "dependsOn": [
                "Transpile TypeScript"
            ],
            "args": [
                "publish",
                "--configuration:Release",
                "${workspaceFolder}/src/FsInfoCat.Web/FsInfoCat.Web.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "/fl", "/flp:logfile=\"${workspaceFolder}/dev/log/FsInfoCat.Web.Release.log\";verbosity=normal" // verbosity=minimal|normal|detailed|diagnostic
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Publish All",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "--configuration:Release",
                "${workspaceFolder}/src/FsInfoCat.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "/fl", "/flp:logfile=\"${workspaceFolder}/dev/log/Publish.Sln.Release.log\";verbosity=normal" // verbosity=minimal|normal|detailed|diagnostic
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Publish PS Module",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "--configuration:Release",
                "${workspaceFolder}/src/FsInfoCat.PS/FsInfoCat.PS.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "/fl", "/flp:logfile=\"${workspaceFolder}/dev/log/FsInfoCat.PS.Win64Core.Release.log\";verbosity=normal" // verbosity=minimal|normal|detailed|diagnostic
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build Text Template Host",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "--configuration:Debug",
                "${workspaceFolder}/dev/src/StandaloneT4Host/StandaloneT4Host.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "/fl", "/flp:logfile=\"${workspaceFolder}/dev/log/StandaloneT4Host.log\";verbosity=normal" // verbosity=minimal|normal|detailed|diagnostic
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Transpile TypeScript",
            "type": "typescript",
            "tsconfig": "src/FsInfoCat.Web/ClientApp/tsconfig.json",
            "problemMatcher": "$tsc"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/src/FsInfoCat.Web/FsInfoCat.Web.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}
