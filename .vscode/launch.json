{
    // Use IntelliSense to find out which attributes exist for C# debugging
    // Use hover for the description of the existing attributes
    // For further information visit https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch FixProjectFiles",
            "type": "PowerShell",
            "request": "launch",
            "script": "./Resources/FixProjectFiles.ps1",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug Module (PowerShell Desktop)",
            "type": "clr",
            "request": "launch",
            "preLaunchTask": "Build Module (PS Desktop)",
            "program": "powershell_ise",
            "args": [
                "Start-Debug.ps1"
            ],
            "cwd": "${workspaceFolder}/src/FsInfoCat.PS/Test",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Module (PS Core)",
            "type": "clr",
            "request": "launch",
            "preLaunchTask": "Build Module (PS Core)",
            "program": "pwsh",
            "args": [
                "Start-Debug.ps1"
            ],
            "cwd": "${workspaceFolder}/src/FsInfoCat.PS/Test",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Test Module (Windows PowerShell)",
            "type": "clr",
            "request": "launch",
            "program": "powershell",
            "args": [
                "Invoke-FsInfoCatTests.ps1"
            ],
            "preLaunchTask": "Build PS Module (.NET Framework)",
            "cwd": "${workspaceFolder}/src/FsInfoCat.PS/Test",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Test Module (PS Core)",
            "type": "clr",
            "request": "launch",
            "preLaunchTask": "Build Module (PS Core)",
            "program": "pwsh",
            "args": [
                "Invoke-FsInfoCatTests.ps1"
            ],
            "cwd": "${workspaceFolder}/src/FsInfoCat.PS/Test",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Debug web app",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Build Web App",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/src/FsInfoCat.Web/bin/Debug/netcoreapp3.1/FsInfoCat.Web.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/FsInfoCat.Web",
            "stopAtEntry": false,
            // Enable launching a web browser when ASP.NET Core starts. For more information: https://aka.ms/VSCode-CS-LaunchJson-WebBrowser
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/Home"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/ClientApp": "${workspaceFolder}/src/FsInfoCat.Web/ClientApp"
            }
        },
        {
            "name": "Debug test template host",
            "type": "clr",
            "preLaunchTask": "Build Text Template Host",
            "request": "launch",
            "program": "${workspaceFolder}/Setup/bin/T4/StandaloneT4Host.exe",
            "args": ["${workspaceFolder}/src/FsInfoCat.PS/FsInfoCat.PS.csproj"],
            "cwd": "${workspaceFolder}/Setup/bin/T4",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}
